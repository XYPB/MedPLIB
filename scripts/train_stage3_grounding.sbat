#SBATCH --job-name=MedPLIB_train
#SBATCH --comment=Train_stage2_on_grounding_data
#SBATCH --time=2-00:00:00
#SBATCH --mail-type=FAIL
#SBATCH --mail-type=END
#SBATCH --mail-user=yuexi.du@yale.edu

#SBATCH --ntasks=1
